{
    "name": "cards",
    "version": "0.1.0",
    "description": "Two-player card game server using Colyseus",
    "main": "dist/server/index.js",
    "scripts": {
          "build": "tsc -p tsconfig.build.json",
          "start": "node dist/server/index.js",
          "start:dev": "ts-node-dev --watch src --respawn --transpile-only src/server/index.ts",
          "start:prod": "npm run build && node dist/server/index.js",
          "test": "jest",
          "test:watch": "jest --watch",
          "test:coverage": "jest --coverage",
          "lint": "eslint src tests --ext .ts",
          "lint:fix": "eslint src tests --ext .ts --fix",
          "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
          "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
          "prepare": "husky install"
    },
    "keywords": ["cards", "colyseus", "game-server", "multiplayer", "tdd"],
    "author": "",
    "license": "ISC",
    "dependencies": {
          "colyseus": "^0.15.15",
          "@colyseus/schema": "^2.0.34",
          "@colyseus/monitor": "^0.15.8",
          "express": "^4.18.2",
          "prom-client": "^15.1.0"
    },
    "devDependencies": {
          "@types/express": "^4.17.21",
          "@types/jest": "^29.5.11",
          "@types/node": "^20.10.6",
          "@types/supertest": "^6.0.2",
          "@typescript-eslint/eslint-plugin": "^6.17.0",
          "@typescript-eslint/parser": "^6.17.0",
          "eslint": "^8.56.0",
          "eslint-config-prettier": "^9.1.0",
          "eslint-plugin-jest": "^27.6.0",
          "husky": "^8.0.3",
          "jest": "^29.7.0",
          "prettier": "^3.2.4",
          "supertest": "^6.3.3",
          "ts-jest": "^29.1.1",
          "ts-node": "^10.9.2",
          "ts-node-dev": "^2.0.0",
          "typescript": "^5.3.3"
    },
    "engines": {
          "node": ">=18.0.0"
    },
    "repository": {
          "type": "git",
          "url": "git+https://github.com/agileguy/cards.git"
    },
    "bugs": {
          "url": "https://github.com/agileguy/cards/issues"
    },
    "homepage": "https://github.com/agileguy/cards#readme"
}
